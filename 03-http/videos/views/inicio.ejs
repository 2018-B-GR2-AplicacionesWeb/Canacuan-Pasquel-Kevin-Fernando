<!-- TABLAS -->
<!-- tr -> table row -->
<!-- th -> table header -->
<!-- td -> table detail-->
<table>
    <tr>
        <th>Nombre</th>
        <th>Biografia</th>
        <th>Acciones</th>
    </tr>
    <% arreglo.forEach((usuario) => { %>
    <tr>
        <td>
            <%= usuario.nombre  %>
        </td>
        <td>
            <%= usuario.biografia  %>
        </td>
        <td>
            <form action="/Usuario/borrar/<%= usuario.id  %>"
                  method="post">
                <!--button type="button">Yo no</button -->
                <!--button>Yo si</button -->
                <button type="submit">Eliminar</button>
            </form>
            <a href="/Usuario/actualizar-usuario/<%=usuario.id%>">
                <button>Actualizar</button>
            </a>
        </td>
    </tr>
    <% })%>
</table>